<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ReplyMapper">

<select id="getReplyListByBookNo" resultType="com.kosmo.soribook.domain.ReplyVO">

SELECT replyno, replycontent, to_char(replydate,'yyyy-mm-dd') replydate, bookno, usertel
FROM reply
WHERE bookno=#{bookNo}
ORDER BY replydate desc

</select>

<insert id="insertReply">

INSERT INTO REPLY 
values(seq_reply_replyno.nextval,#{replyContent},sysdate,#{bookNo},'010-1111-1111')

</insert>

</mapper>